<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinnerFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/spinTitle"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewTarget"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/target"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageViewSpinWheel"
        android:layout_width="326dp"
        android:layout_height="275dp"
        android:src="@drawable/wheel"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTarget"
        app:layout_constraintStart_toStartOf="@+id/imageViewTarget"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTarget" />

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSpinWheel" />

    <ImageView
        android:id="@+id/spinButton"
        android:layout_width="107dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/spinbutton"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSpinWheel"
        app:layout_constraintStart_toStartOf="@+id/imageViewSpinWheel"
        app:layout_constraintTop_toBottomOf="@+id/textViewPoints" />

</androidx.constraintlayout.widget.ConstraintLayout>
